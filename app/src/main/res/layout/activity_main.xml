<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/singleRxShotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="execute single rx shot"
        app:layout_constraintBottom_toTopOf="@id/closeRealmButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/closeRealmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="close realm manually"
        app:layout_constraintBottom_toTopOf="@id/instanceCountTv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/singleRxShotButton" />

    <TextView
        android:id="@+id/instanceCountTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="global instance: 0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/closeRealmButton" />

</androidx.constraintlayout.widget.ConstraintLayout>